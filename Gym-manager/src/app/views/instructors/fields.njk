<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{instructor.avatar_url}}">
    </div>
</div>

<div class="item">
    <div>Instructor</div>
    <div>
        <input type="text" name="name" placeholder="Nome" value="{{instructor.name}}">
    </div>
</div>

<div class="item">
    <div>Date</div>
    <div>
        <input type="date" name="birth" value="{{instructor.birth}}">
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input type="radio" value="M" name="gender" {% if instructor.gender == 'M' %} checked="checked" {% endif %}>Masculino
        </span>
        <span>
            <input type="radio" value="F" name="gender" {% if instructor.gender == 'F' %} checked="checked" {% endif %}>Feminino
        </span>
    </div>

    <div class="item">
        <div>Área de atuação</div>
        <div>
            <input type="text" name="services" placeholder="Separe os serviços prestados por vírgula" value="{{instructor.services}}">
        </div>
    </div>
</div>
<button type="submit">Salvar</button>